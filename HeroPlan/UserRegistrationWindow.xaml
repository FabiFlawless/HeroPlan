<Window x:Class="HeroPlan.UserRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neuen Benutzer registrieren" Height="250" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Benutzername:" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Passwort:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <Button Content="Registrieren" Click="RegisterButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>