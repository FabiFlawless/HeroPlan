<Window x:Class="HeroPlan.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300" WindowStartupLocation="CenterScreen">

    <!-- Main layout container -->
    <StackPanel Margin="20">
        <!-- Username input section -->
        <TextBlock Text="Username:" />
        <TextBox x:Name="UsernameTextBox" Margin="0,5,0,10" />

        <!-- Password input section -->
        <TextBlock Text="Password:" />
        <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10" />

        <!-- Login button -->
        <Button Content="Login" Click="LoginButton_Click" />
    </StackPanel>
</Window>